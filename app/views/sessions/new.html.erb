<div class="modal" style="width: 350px">
  <div style="display: flex; align-items: center; justify-content: center; font-size: 18px; margin-bottom: 10px">
    <h1>Registro de Usu√°rio</h1>
  </div>

  <%= form_with(url: signup_path, method: :post) do |form| %>
    <% if flash[:alert] %>
      <p class="alert alert-danger"><%= flash[:alert] %></p>
    <% end %>

    <div class="form-group">
      <div style="display: flex">
        <%= form.label :nome %>
      </div>
      <div style="display: flex; width: 100%">
        <%= form.email_field :name, class: 'form-control', style:"width: 100%" %>
      </div>
    </div>

    <div class="form-group">
      <div style="display: flex">
        <%= form.label :email %>
      </div>
      <div style="display: flex; width: 100%">
        <%= form.email_field :email, class: 'form-control', style:"width: 100%" %>
      </div>
    </div>

    <div class="form-group">
      <div style="display: flex">
        <%= form.label :senha %>
      </div>
      <div style="display: flex; width: 100%">
        <%= form.password_field :password, class: 'form-control', style:"width: 100%" %>
      </div>
    </div>

    <div class="form-group">
      <div style="display: flex">
        <%= form.label :confirmar_senha %>
      </div>
      <div style="display: flex; width: 100%">
        <%= form.password_field :password_confirmation, class: 'form-control', style:"width: 150%" %>
      </div>
    </div>

    <div style="align-content: center; margin-top: 5px; padding: 4px; color: white ;background-color: rgb(65 65 74 / 27%); justify-content: center; align-items: center; border-radius: 4px; border: none; font-size: 15px">
      <%= link_to 'Login', login_path, data: { turbo_frame: :remote_modal } %>
    </div>

    <div style=" ; margin-top: 5px; padding: 4px; color: white ;background-color: #1530ff; justify-content: flex-end ; align-items: center; border-radius: 4px; border: none; font-size: 15px">
      <%= form.submit 'Registrar', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
