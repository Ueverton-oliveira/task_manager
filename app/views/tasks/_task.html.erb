<li class="el">
  <% if task.task_type == 'bug' %>
    <div class="task red">
  <% elsif task.task_type == 'story' %>
    <div class="task yellow">
  <% elsif task.task_type == 'task' %>
    <div class="task green">
  <% end %>
  <header>
    <h3><%= task.name %></h3>
<!--    <span class="icon flaticon-edit"></span>-->
  </header>
  <div class="task-content">
    <%= task.description %>
  </div>

  <div style="display: flex; justify-content: space-evenly; margin-top: 5px">
    <div>
      <%= link_to 'Mostrar', task, data: { turbo_frame: :remote_modal } %>
    </div>
    <div>
      <%= link_to 'Editar', edit_task_path(task), data: { turbo_frame: :remote_modal } %>
    </div>
    <div>
      <a data-confirm="Você tem certeza?" data-method="delete">
        <%= button_to 'Excluir', task_path(task), method: :delete, data: { confirm: 'Você tem certeza?' } %>
      </a>
    </div>
  </div>



</li>
