<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "erro") %> proibiu essa tarefa de ser salva:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([['Pendente', 'pending'], ['Em Progresso', 'in_progress'], ['Review', 'review'], ['ConcluÃ­da', 'done']]) %>
  </div>

  <div class="field">
    <%= form.label :task_type %>
    <%= form.select :task_type, options_for_select([['Story', 'story'], ['Task', 'task'], ['Bug', 'bug']]) %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>