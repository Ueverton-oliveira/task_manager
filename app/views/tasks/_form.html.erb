<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "erro") %> proibiu essa tarefa de ser salva:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div style="display: flex">
      <%= form.label :name %>
    </div>
    <div style="display: flex; width: 100%">
      <%= form.text_field :name, style:"width: 100%; margin-bottom: 15px" %>
    </div>
  </div>

  <div style="display: flex">
    <div class="field">
      <div style="display: flex">
        <%= form.label :status %>
      </div>
      <div style="display: flex; width: 100%">
        <%= form.select :status, options_for_select([['Pendente', 'pending'], ['Em Progresso', 'in_progress'], ['Falha', 'failed'], ['ConcluÃ­da', 'completed']]), :class => "col-md-1", style:"width: 100%" %>
      </div>
    </div>

    <div class="field" style="margin-left: 8rem">
      <div style="display: flex; align-content: space-around;">
        <%= form.label :tipo %>
      </div>
      <div style="display: flex; width: 100%;">
        <%= form.select :task_type, options_for_select([['Story', 'story'], ['Task', 'task'], ['Bug', 'bug']]), style:"width: 250px; margin-bottom: 15px" %>
      </div>
    </div>
  </div>


  <div class="field">
    <div style="display: flex;  margin-top: 15px">
      <%= form.label :url %>
    </div>
    <div style="display: flex; width: 100%">
      <%= form.text_field :url, style:"width: 100%; margin-bottom: 15px" %>
    </div>
  </div>

  <div class="field">
    <div style="display: flex">
      <%= form.label :description %>
    </div>
    <div style="display: flex; width: 100%">
      <%= form.text_field :description, style:"width: 100%; margin-bottom: 15px" %>
    </div>
  </div>

  <div class="actions">
    <div style="align-content: center; margin-top: 5px; padding: 4px; color: white ;background-color: rgb(65 65 74 / 27%); justify-content: center; align-items: center; border-radius: 4px; border: none; font-size: 15px;  margin-bottom: 5px">
      <%= link_to 'Voltar', tasks_path, data: {
        controller: 'modals',
        action: "modals#close", style:"display: flex; justify-content: center;"
      } %>
    </div>

    <div style=" ; margin-top: 5px; padding: 4px; color: white ;background-color: #1530ff; justify-content: flex-end ; align-items: center; border-radius: 4px; border: none; font-size: 15px">
      <%= form.submit style:"display: flex; justify-content: center;" %>
    </div>
  </div>
<% end %>